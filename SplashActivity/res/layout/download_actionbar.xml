<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/actionbar_bg">
    
    <ImageView 
        android:id="@+id/down_actionbar_left_pic"
        android:contentDescription="@+id/actionbar_left_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:src="@drawable/topbar_back"
        android:layout_centerVertical="true"
        android:paddingLeft="16sp"/>
    
    
    <TextView 
        android:id="@+id/down_actionbar_center_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:text="@string/data_download_now"
        style="@style/PUBLIC_TITLE"/>
    
     <ImageView 
        android:id="@+id/down_actionbar_right"
        android:contentDescription="@+id/actionbar_left_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/downloadall_icon"
        android:layout_centerVertical="true"
        android:paddingRight="16sp"/>

</RelativeLayout>
