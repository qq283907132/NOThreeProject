<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dip"
    android:gravity="fill_vertical"
    >
    <ImageView 
        android:id="@+id/iv_yongliao_picname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="用料Item的图片"
        android:background="@drawable/ic_launcher"
        android:layout_alignParentLeft="true"
        />
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_yongliao_picname"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_margin="3dip"
        >
        <TextView 
            android:id="@+id/tv_yongliao_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="黄豆芽"/>
        <TextView 
            android:id="@+id/tv_yongliao_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:text="2把"/>
    </LinearLayout>
	<ImageView
	    android:id="@+id/iv_yongliao_icon"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    />
</RelativeLayout>
